<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MypageChickenFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mypage_chick_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/chick_profile" />

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/mypage_chick_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/chick_egg_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/chick_egg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="egg" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:src="@drawable/logo" />

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/mypage_chick_settings"
            android:layout_width="20dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_baseline_settings_24" />

    </LinearLayout>

    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/yellow2"
        android:text="프로필 수정"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/chickBtnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"/>

    <LinearLayout
        android:id="@+id/chick_last_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:text="지난 칭찬 메세지"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/ic_baseline_chevron_right_24" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mypage_chat_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>