<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ㅇㅇ 님이 오늘 퀘스트를 잘 수행했나요?"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:padding="40dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/bad_img"
            android:layout_marginStart="40dp"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/blackegg"
            android:maxHeight="20dp"
            android:maxWidth="20dp"
            android:background="#00000000"
            android:padding="0sp"
            android:scaleType="centerCrop"


            />
        <ImageButton
            android:id="@+id/good_img"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/greenegg"
            android:maxHeight="20dp"
            android:maxWidth="20dp"
            android:background="#00000000"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:layout_marginStart="60dp"

            />

        <ImageButton
            android:id="@+id/perfect_img"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginStart="60dp"
            android:background="#00000000"
            android:maxWidth="20dp"
            android:maxHeight="20dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:src="@drawable/redegg"


            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노력이 필요해요"
            android:textSize="13sp"
            android:layout_marginStart="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잘했어요"
            android:textSize="13sp"
            android:layout_marginStart="65dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최고에요!(+10egg)"
            android:textSize="13sp"
            android:layout_marginStart="60dp"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="칭찬 메세지"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        />

    <EditText
        android:id="@+id/review_edit"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_round"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:padding="13dp"

        />

    <Button
        android:id="@+id/review_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="확인"
        android:textColor="@color/black"
        android:layout_gravity="end"
        android:background="#00000000"

        />
</LinearLayout>