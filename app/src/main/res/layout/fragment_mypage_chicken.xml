<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MypageChickenFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mypage_chicken_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/chicken_profile" />

        <TextView
            android:id="@+id/mypage_chicken_text"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/mypage_chicken_settings"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_settings_24" />

    </LinearLayout>

    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/yellow2"
        android:text="프로필 수정" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chick_list_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:text="병아리 목록"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_baseline_chevron_right_24" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="#D0D0D0" />

        <LinearLayout
            android:id="@+id/chicken_message_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:text="내가 남긴 칭찬 메세지"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_baseline_chevron_right_24" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>